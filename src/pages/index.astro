---
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <main>
    <div
      class='h-52 flex flex-col justify-between items-center text-center py-5'
    >
      <header class='text-3xl items-center leading-10'>
        Professional Paint with Effortless finishes
      </header>
      <p class='text-xs w-3/4'>
        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
        tempor incididunt ut labore et dolore magna aliqua.
      </p>
    </div>

    <section class=" h-[32rem] flex flex-col justify-around">
      <!-- Cars Carousel-->
      <div class='carousel' data-flickity='{ "wrapAround": true }'>
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/orange-tree.jpg'
          alt='orange tree'
        />
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/submerged.jpg'
          alt='submerged'
        />
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/look-out.jpg'
          alt='look-out'
        />
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/one-world-trade.jpg'
          alt='One World Trade'
        />
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/drizzle.jpg'
          alt='drizzle'
        />
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/cat-nose.jpg'
          alt='cat nose'
        />
      </div>
      <!-- Motorcycles Carousel-->

      <div class='carousel' data-flickity='{ "wrapAround": true }'>
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/orange-tree.jpg'
          alt='orange tree'
        />
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/submerged.jpg'
          alt='submerged'
        />
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/look-out.jpg'
          alt='look-out'
        />
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/one-world-trade.jpg'
          alt='One World Trade'
        />
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/drizzle.jpg'
          alt='drizzle'
        />
        <img
          src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/cat-nose.jpg'
          alt='cat nose'
        />
      </div>
    </section>
  </main>
  <style>
    /* external css: flickity.css */

    * {
      box-sizing: border-box;
    }

    body {
      font-family: sans-serif;
    }

    .carousel {
      width: 100%;
    }

    .carousel img {
      display: block;
      height: 200px;
    }


    @media screen and (min-width: 768px) {
      .carousel img {
        /* height: 400px; */
      }
    }
  </style>
</Layout>
